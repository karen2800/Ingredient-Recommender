@model RecipesViewModel
@{
    ViewData["Title"] = "Find Recipe";
}

<head>

</head>

<body class="background">
    <div class="text-center">
        @if (Model != null)
        {
            if (Model.Index == -1)
            {
                <h1 class="display-4">Find a Recipe</h1>

                @* Type in Ingredient to Add *@
                <h3>Type in an ingredient</h3>
                <br />
                <form asp-controller="Home" asp-action="SearchRecipes" method="post">
                    <input class="input" name="IngredientName" />
                    <button class="btn btn-outline-dark" type="submit" asp-controller="Home" asp-action="SearchRecipes">Find Recipe</button>
                </form>
                <br />

                for (int i = 0; i < Model.Recipes.Count && i < 20; i++)
                {
                    <h5 type="submit" onclick="location.href='@Url.Action("DisplayRecipe", "Home", new { Index = i })'">
                        @Html.DisplayFor(model => Model.Recipes[i].Title)
                    </h5>
                }
            }

            else
            {
                @* Display Recipe Title *@
                <h1 class="display-4">@Model.Recipes[Model.Index].Title: @Model.Recipes[Model.Index].Id</h1>
                <br />

                <button class="btn btn-dark" type="submit" onclick="location.href='@Url.Action("SeeTitles", "Home")'">
                    Back
                </button>
                <br />

                @foreach (IngredientModel Ingredient in Model.Recipes[Model.Index].Ingredients)
                {
                    <br />
                    <button class="btn btn-light btn-ingr" type="submit" onclick="location.href='@Url.Action("AddIngredient", "Home", new { IngredientName = Ingredient.Name })'">
                        @Ingredient.Name
                    </button>
                }
            }
        }
    </div>
</body>